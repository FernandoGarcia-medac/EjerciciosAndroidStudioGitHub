<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ResultadoActivity">

    <TextView
        android:id="@+id/tv_mensaje_final"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="¡Enhorabuena, [Nombre de Usuario]! Quiz Finalizado."
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        tools:text="¡Enhorabuena, Fer! Quiz Finalizado."/>

    <TextView
        android:id="@+id/tv_puntuacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tu nota: 10/10"
        android:textSize="22sp"
        android:textStyle="italic"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_mensaje_final"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Tu nota: 8/10"/>

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_puntuacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:layout_constraintBottom_toTopOf="@+id/btn_reiniciar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tv_ranking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--- TOP 5 JUGADORES ---\n\n1. Fer - 10/10\n2. Juan - 8/10\n3. Ana - 6/10"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:padding="8dp"
            tools:text="--- TOP 5 JUGADORES ---\n\n1. Fer - 10/10\n2. Juan - 8/10\n3. Ana - 6/10\n4. Miguel - 6/10\n5. Elena - 4/10"
            />
    </ScrollView>

    <Button
        android:id="@+id/btn_reiniciar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reiniciar Quiz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        style="@style/Widget.AppCompat.Button.Colored"
        />

</androidx.constraintlayout.widget.ConstraintLayout>